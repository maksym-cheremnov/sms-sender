{
    "compilerOptions": {
      "declaration": true,
      "module": "commonjs",
      "types": ["reflect-metadata"],
      "esModuleInterop": true,
      "skipDefaultLibCheck": false,
      "allowSyntheticDefaultImports": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "baseUrl": ".",
      "paths": {
        "*": [
          "node_modules/*",
          "lib/types/*"
        ]
      }
    },
    "include": [
      "lib/**/*"
    ]
  }
  